
<h2>Entrar</h2> <!-- melhorar com o i18n -->

<div id="login-buttons" class="container-fluid d-flex justify-content-center px-0 py-2">
  <%= link_to new_customer_session_path do %>
    <div id="customer-login" class="LOGIN-CARD mx-2 my-2 px-2 py-3">
      <i class="bi bi-person my-auto mx-1"></i>
      <p class="my-auto mx-1"><%= t("devise.sessions.new.sign_in_resource", resource: Customer.model_name.human) %></p>
    </div>
  <% end %>
  <%= link_to new_manager_session_path do %>
    <div id="manager-login" class="LOGIN-CARD MANAGER-LOGIN mx-2 my-2 px-2 py-3">
      <i class="bi bi-person-gear my-auto mx-1"></i>
      <p class="my-auto mx-1"><%= t("devise.sessions.new.sign_in_resource", resource: Manager.model_name.human) %></p>
    </div>
  <% end %>
</div>




